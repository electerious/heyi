{
  "name": "heyi",
  "version": "3.0.0",
  "description": "CLI tool to execute AI prompts with flexible output formatting",
  "keywords": [
    "ai",
    "cli",
    "openrouter",
    "llm",
    "prompt"
  ],
  "homepage": "https://github.com/electerious/heyi",
  "repository": {
    "type": "git",
    "url": "https://github.com/electerious/heyi.git"
  },
  "license": "MIT",
  "type": "module",
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "eslint": "eslint \"**/*.js\"",
    "format": "npm run eslint -- --fix && npm run prettier -- --write",
    "lint": "npm run eslint && npm run prettier -- --check",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,md,yml}\"",
    "start": "./bin/index.js",
    "test": "npm run lint"
  },
  "dependencies": {
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "ai": "^5.0.129",
    "commander": "^14.0.3",
    "dotenv": "^16.6.1",
    "puppeteer": "^24.37.2",
    "sanitize-html": "^2.17.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electerious/eslint-config": "^5.2.1",
    "@electerious/prettier-config": "^4.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=22"
  },
  "authors": [
    "Tobias Reich <tobias@electerious.com>"
  ]
}
